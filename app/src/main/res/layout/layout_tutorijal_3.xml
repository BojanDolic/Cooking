<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9730db"
    android:gravity="center"
    android:padding="9dp">


    <ImageView
        android:id="@+id/tutorijal_3_slika1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/recept_javna_objava"
        android:layout_gravity="left"
        android:layout_margin="9dp"/>

    <ImageView
        android:id="@+id/tutorijal_3_slika2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/recept_privatna_objava"
        android:layout_gravity="right"
        android:layout_margin="9dp"/>

    <TextView
        android:id="@+id/tutorijal_3_naslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vidljivost recepta"
        android:textColor="#fff"
        android:fontFamily="@font/rubik_bold"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/tutorijal_3_opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recept_tutorijal_3"
        android:textColor="#fff"
        android:fontFamily="@font/rubik_light"
        android:textAlignment="center"
        android:textSize="17sp" />


</LinearLayout>