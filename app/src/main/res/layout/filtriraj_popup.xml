<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/rubik_bold"
        android:padding="6dp"
        android:text="Filtrirajte recepte"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Kategorije:"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/filter_kategorija_spinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/input_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Vrijeme pripreme:"
            android:textAlignment="center"
            android:textSize="16sp" />


        <Spinner
            android:id="@+id/filter_vrijemePripreme_spinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/gradient_border" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/rubik_regular"
            android:text="TeÅ¾ina pripreme:"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/filter_tezinaPripreme_spinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/input_background" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filtriraj_ne_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Odustani"
            android:textColor="@color/crvena" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filtriraj_da_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Filtriraj"
            android:textColor="@color/zelenaUspjesno" />


    </LinearLayout>


</LinearLayout>