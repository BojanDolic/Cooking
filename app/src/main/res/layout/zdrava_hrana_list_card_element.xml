<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/zdrava_hrana_item_slika"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@color/colorPrimary"
                android:scaleType="centerCrop"
                android:transitionName="zdravaHranaImage"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/bottom_shadow_scrim"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/zdrava_hrana_item_naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Namirnica"
                android:fontFamily="@font/rubik_bold"
                android:textSize="17sp"
                android:textColor="#fff"
                android:layout_margin="6dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:layout_alignBottom="@id/zdrava_hrana_item_slika"
                android:paddingBottom="3dp"
                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>