<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="9dp"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorPrimaryAlpha"
    app:contentPaddingRight="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sastojak_preview_redniBroj"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="2."
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/rubik_bold"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            />


        <TextView
            android:id="@+id/sastojak_preview_imeSastojka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Govedina 500g"
            android:paddingStart="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:fontFamily="@font/rubik_light"
            android:textSize="17sp"
            android:layout_toEndOf="@id/sastojak_preview_redniBroj"/>


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>