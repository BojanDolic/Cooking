<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/crvena">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/prijava_card_design_warning_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/error_icon"
                app:tint="@android:color/white"
                android:backgroundTint="@color/crvena"
                android:background="@color/crvena"
                android:padding="9dp"/>

            <TextView
                android:id="@+id/tekst_prijave_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primjer greÅ¡ke"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:maxLines="2"
                android:layout_toEndOf="@id/prijava_card_design_warning_image"
                android:layout_centerVertical="true"/>


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>